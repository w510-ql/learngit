<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_mf_itemimg"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_mf_itemtitle"
        android:layout_width="376dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="给你个机会，随便问~"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/im_mf_itemimg"
        app:layout_constraintTop_toBottomOf="@+id/tx_mf_itemname" />

    <TextView
        android:id="@+id/tx_mf_itemname"
        android:layout_width="328dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:text="奥特之光"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_mf_itemtitle"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>